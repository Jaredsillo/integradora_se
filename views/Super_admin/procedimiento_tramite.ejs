<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Autorización de Grupos</title>
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <%- include('navbar') %><br><br>
        <div class="container mt-5" style="text-align: center; margin-top: 180px;">
            <div class="page-inner">
                <div class="d-flex align-items-center"><br><br>
                    <a href="/sp_admin/vista_principal" class="breadcrumb-link">Vista Principal</a>
                    <span class="mx-2">/</span>
                    <a href="/sp_admin/seguimiento_tramite" class="breadcrumb-link">Seguimiento Tramite</a>
                    <span class="mx-2">/</span>
                    <a href="/sp_admin/procedimiento_tramite" class="breadcrumb-link">Procedimiento
                        Trámites</a>
                </div>
                <div class="container mt-5">
                    <div class="row">
                        <!-- Tarjeta flotante con tabla -->
                        <% alumno.forEach((item) => { %>
                            <div class="card shadow">
                                <div class="card-body">
                                    <div class="modal-header">
                                        <div class="card-header-details">
                                            <!-- Mostrar el nombre del trámite -->
                                            <div class="header-item d-flex align-items-center mb-3">
                                                <h5 class="me-2">Trámite:</h5>
                                                <h6><%= item.NombreTramite %></h6>
                                            </div>
                                            <div class="d-flex">
                                                <!-- Mostrar el nombre completo del alumno -->
                                                <div class="header-item d-flex align-items-center me-4">
                                                    <h5 class="me-2">Alumno:</h5>
                                                    <h6><%= item.NombreAlumno %> <%= item.apellido_paterno %> <%= item.apellido_materno %></h6>
                                                </div>
                                                <!-- Mostrar la matrícula del alumno -->
                                                <div class="header-item d-flex align-items-center me-4">
                                                    <h5 class="me-2">Matrícula:</h5>
                                                    <h6><%= item.matricula %></h6>
                                                </div>
                                                <!-- Mostrar el programa académico del alumno -->
                                                <div class="header-item d-flex align-items-center">
                                                    <h5 class="me-2">PA:</h5>
                                                    <h6><%= item.NombrePrograma %></h6>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                        


                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="card-title">Lista de Procedimiento de Actividad</h5>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover" id="personTable">
                                        <thead>
                                            <tr>
                                                <th>No.</th>
                                                <th>Actividad</th>
                                                <th>Estatus</th>
                                                <th>accion</th>
                                            </tr>
                                        </thead>
                                        <%   resultados.forEach((result)=> { %> 
                                        <tbody>
                                            <tr>
                                                <td><%= result.IdAlumnoProceso %></td>
                                                <td><%= result.NombreActividad %></td>
                                                <td><%= result.Estatus %></td>
                                                <td>
                                                    <a href="" class="btn btn-outline-secondary" style="float: left;">
                                                        <i class="fas fa-tasks"></i> Proceso
                                                    </a>
                                                </td>
                                                
                                            </tr>
                                        </tbody>
                                        <% }); %>

                                    </table>
                                    <a href="/sp_admin/seguimiento_tramite" class="btn btn-outline-secondary"
                                        style="float: left;">Regresar</a>
                                </div>
                            </div>
                        </div>
                     
                    </div>
                </div>
            </div>
            <%- include('footer') %>
</body>

</html>